<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/alarm_medicine_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/medicine_seretide_template" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:text="@string/alarm_drag_message"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/alarm_time_to_take"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/alarm_mask_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/stop_alarm_imageview"
        android:layout_below="@+id/alarm_medicine_imageview"
        android:src="@drawable/mask" />

    <ImageView
        android:id="@+id/stop_alarm_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/alarm_medicine_imageview"
        android:layout_alignParentRight="true"
        android:src="@drawable/cancel_alarm_image" />

</RelativeLayout>