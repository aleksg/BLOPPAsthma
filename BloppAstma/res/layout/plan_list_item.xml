<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp" >

    <CheckBox
        android:id="@+id/plan_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusable="false" />

    <ImageView
        android:id="@+id/plan_smiley_imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/plan_checkBox"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/plan_checkBox"
        android:src="@drawable/green_face" 
        android:contentDescription="@string/log"
        android:focusable="false"/>

    <TextView
        android:id="@+id/plan_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/plan_checkBox"
        android:layout_alignBottom="@+id/plan_checkBox"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/plan_smiley_imageView"
        android:focusable="false"
        />

</RelativeLayout>