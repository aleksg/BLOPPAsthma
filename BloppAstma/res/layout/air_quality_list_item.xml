<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/air_quality_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pollen_beskjeden" />

    <TextView
        android:id="@+id/air_quality_comment_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/air_quality_imageView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/air_quality_imageView"
        android:text="Ingen informasjon om luftkvalitet"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/air_quality_long_comment_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/air_quality_comment_textView"
        android:layout_alignRight="@+id/air_quality_comment_textView"
        android:layout_below="@+id/air_quality_comment_textView"
        android:text="Ingen detaljert informasjon tilgjengelig"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

</RelativeLayout>