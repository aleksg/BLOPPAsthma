<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false" >

    <ImageView
        android:id="@+id/rewardImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:src="@drawable/book_small" />

    <TextView
        android:id="@+id/rewardDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkBoxIsTaken"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/checkBoxIsTaken"
        android:layout_toRightOf="@+id/rewardImage"
        android:focusable="false"
        android:text="Beskrivelse" />

    <TextView
        android:id="@+id/rewardCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_alignBottom="@+id/rewardImage"
        android:layout_alignLeft="@+id/rewardDescriptionTextView"
        android:layout_below="@+id/checkBoxIsTaken"
        android:layout_toLeftOf="@+id/checkBoxIsTaken"
        android:text="Stjerner: " />

    <CheckBox
        android:id="@+id/checkBoxIsTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:focusable="false"
        android:text="Solgt" />

</RelativeLayout>
