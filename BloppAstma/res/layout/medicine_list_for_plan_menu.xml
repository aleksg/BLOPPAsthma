<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/medicine_plan_alarm_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:src="@drawable/smiley" />

    <TextView
        android:id="@+id/medicine_plan_alarm_list_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/medicine_plan_alarm_list_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/medicine_plan_alarm_list_icon"
        android:text="Large Text"
        android:clickable="false"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>